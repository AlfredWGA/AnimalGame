<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_lose_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bg_blue_land" />

    <ImageView
        android:id="@+id/img_skull"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/skull"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_lise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You lose."
        android:fontFamily="@font/font_one"
        android:textColor="@android:color/white"
        android:textSize="70dp"
        app:layout_constraintTop_toBottomOf="@id/img_skull"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="retry"
        android:fontFamily="@font/font_one"
        android:textColor="@android:color/black"
        android:textSize="35dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onContinueButtonClick"/>


</android.support.constraint.ConstraintLayout>